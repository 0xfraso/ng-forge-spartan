{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ng-forge-spartan": {
      "projectType": "library",
      "root": "libs/ng-forge-spartan",
      "sourceRoot": "libs/ng-forge-spartan/src",
      "prefix": "df-spartan",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "libs/ng-forge-spartan/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/ng-forge-spartan/tsconfig.lib.prod.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "example": {
      "projectType": "application",
      "schematics": {},
      "root": "apps/example",
      "sourceRoot": "apps/example/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "apps/example/src/main.ts",
            "tsConfig": "apps/example/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "apps/example/public"
              }
            ],
            "styles": [
              "apps/example/src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "apps/example/ngsw-config.json"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "host": "0.0.0.0",
            "allowedHosts": true
          },
          "configurations": {
            "production": {
              "buildTarget": "example:build:production"
            },
            "development": {
              "buildTarget": "example:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
